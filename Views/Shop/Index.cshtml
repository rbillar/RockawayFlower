@model IEnumerable<RockawayFlower.Models.Product>

<div class="container py-5">
    <h1 class="mb-4">Shop</h1>
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <div class="mt-auto">
                            <form asp-controller="Cart" asp-action="Add" method="post" class="d-flex gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@product.Id" />
                                <input type="hidden" name="name" value="@product.Name" />
                                <input type="hidden" name="priceCents" value="@product.PriceCents" />
                                <input type="number" name="qty" value="1" min="1" class="form-control" style="max-width:110px" />
                                <button class="btn btn-primary" type="submit">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <a class="btn btn-outline-secondary" href="/Cart/Index">View Cart</a>
    </div>
</div>
