<!-- Header Section -->
<section class="py-4 text-center bg-light border rounded mb-4 shadow-sm">
    <div class="container">
        <h2 class="fw-bold mb-2">Available Exclusively at Rockaway Flower Shop</h2>
        <p class="lead mb-0">Please call (347) 339-1695 for availability</p>
    </div>
</section>

<!-- Gallery Section -->
<section id="gallery" class="bg-light py-5">
    <div class="container">
        <div class="row g-4">
            @for (int i = 0; i < galleryImages.Length; i++)
            {
                var file = galleryImages[i];
                var title = System.IO.Path.GetFileNameWithoutExtension(file);

                <div class="col-6 col-md-4 col-lg-3">
                    <!-- Lightbox should open the FULL image -->
                    <a href="~/images/gallery-full/@file" data-lightbox="flowers" data-title="@title">
                        <!-- Page should load the smaller thumbnail/list image -->
                        <img src="~/images/gallery/@file"
                             class="img-fluid rounded shadow-sm hover-shadow"
                             alt="@title"
                             loading="lazy" />
                    </a>
                </div>
            }
        </div>
    </div>
</section>
