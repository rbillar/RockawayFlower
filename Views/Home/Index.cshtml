@{
    ViewBag.Title = "Rockaway Flower Shop | Fresh Bouquets & Delivery in Ozone Park, NY";
    ViewBag.MetaDescription = "Rockaway Flower Shop in Ozone Park, NY – fresh bouquets, wedding & event florals, and same-day local delivery. Call (347) 339-1695 or visit 90-01 Rockaway Blvd.";
